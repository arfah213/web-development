}

                                                         //task 4
console.log("fourth output");


let softwareHouses = ["Microsoft", "Google", "Apple", "Amazon"];

console.log("Original Array:", softwareHouses);

// Function to remove the first name
function removeFirst() {
    softwareHouses.shift();
    console.log("After Removing First Name:", softwareHouses);
}

// Function to remove a name from the middle and add a new name
function replaceMiddle(newName) {
    let middleIndex = Math.floor(softwareHouses.length / 2);
    softwareHouses.splice(middleIndex, 1, newName);
    console.log("After Replacing Middle Name:", softwareHouses);
}

// Function to add a new name at the end
function addAtEnd(newName) {
    softwareHouses.push(newName);
    console.log("After Adding Name at the End:", softwareHouses);
}

removeFirst();
replaceMiddle("Salesforce");
addAtEnd("IBM");

//                             task 5
console.log("5 output");
function countVowels(str) {
    let count = 0;
    let vowels = "aeiouAEIOU";

    for (let char of str) {
        if (vowels.includes(char)) {
            count++;
        }
    }
    return count;
}


console.log(countVowels("Hello World")); 
console.log(countVowels("JavaScript"));  
                                       //task 6
console.log(" 6 task output");
const countVowelsArrow = (str) => {
    return str.split('').filter(char => "aeiouAEIOU".includes(char)).length;
};

// Test the arrow function
console.log(countVowelsArrow("Hello World")); 
console.log(countVowelsArrow("JavaScript")); 

