// first task 1
console.log("first output");
let nums = [10, 15, 20, 25, 30];

for (let num of nums) {
    if (num % 2 === 0) {
        console.log(num); // Print even numbers
    }
}

                                                    //task 2
console.log("second output");
let numbers = [10, 5, 30, 2, 50, 7];

let max = nums[0]; 
let min = nums[0]; 

for (let num of numbers) {
    if (num > max) {
        max = num;
    }
    if (num < min) {
        min = num; 
    }
}

console.log("Max:", max);
console.log("Min:", min);


